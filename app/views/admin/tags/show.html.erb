<%
    content_for :title, _('Tag Details | %{client}') % { client: current_client.name }
    content_for :description, _('Details for a tag of %{client}') % { client: current_client.name }
%>

<a class="button" href="<%= admin_tags_path %>">
  <i class="fa-solid fa-long-arrow-alt-left"></i>
  &nbsp;
  <%= _('Back') %>
</a>
<div class="dropdown is-togglable">
  <div class="dropdown-trigger">
    <a href="javascript:void(0)" aria-haspopup="true" aria-controls="dropdown-menu" class="button">
      <%= _('Actions') %>
      &nbsp;
      <i class="fa-solid fa-angle-down"></i>
    </a>
  </div>
  <%= render partial: 'admin/tags/dropdown_menu', locals: { tag: @tag } %>
  <%= render partial: 'admin/tags/delete_modal', locals: { tag: @tag } %>
</div>
<article class="card mt-5">
  <header class="card-header">
    <h1 class="card-header-title">
      <i class="fa-solid fa-tag"></i>
      &nbsp;
      <%= _('Tag Details') %>
    </h1>
  </header>
  <div class="card-content">
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Name') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.name %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Slug') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.slug %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Description') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.description %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Template') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.template %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Visibility') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.public_visibility? ? _('Public|Visibility') : _('Private|Visibility') %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Created At') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.created_at.to_fs %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Updated At') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.updated_at.to_fs %></div>
        </div>
      </div>
    </div>
  </div>
</article>
<article class="card mt-5">
  <header class="card-header">
    <h1 class="card-header-title">
      <i class="fa-solid fa-tag"></i>
      &nbsp;
      <%= _('Meta Information') %>
    </h1>
  </header>
  <div class="card-content">
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Tag|Meta title') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.meta_title %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Tag|Meta description') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @tag.meta_description %></div>
        </div>
      </div>
    </div>
  </div>
</article>
<article class="card mt-5">
  <div class="card-header">
    <h2 class="card-header-title">
      <i class="fa-solid fa-tag"></i>
      &nbsp;
      <%= _('Tag|Body') %>
    </h2>
  </div>
  <div class="card-content">
    <div class="content">
      <%= @tag.body&.html_safe %>
    </div>
  </div>
</article>
<article class="card mt-5">
  <div class="card-header">
    <h2 class="card-header-title">
      <i class="fa-solid fa-thumbtack"></i>
      &nbsp;
      <%= _('Posts') %>
    </h2>
  </div>
  <div class="card-content">
    <div class="smart-table" id="posts-smart-table" data-autoload="<%= admin_tag_posts_path(@tag, hide_actions: true) %>"></div>
  </div>
</article>
<article class="card mt-5">
  <div class="card-header">
    <h2 class="card-header-title">
      <i class="fa-solid fa-file"></i>
      &nbsp;
      <%= _('Pages') %>
    </h2>
  </div>
  <div class="card-content">
    <div class="smart-table" id="pages-smart-table" data-autoload="<%= admin_tag_pages_path(@tag, hide_actions: true) %>"></div>
  </div>
</article>