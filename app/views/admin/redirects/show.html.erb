<%
    content_for :title, _('Redirect Details | %{client}') % { client: current_client.name }
    content_for :description, _('Details for a redirect of %{client}') % { client: current_client.name }
%>

<a class="button" href="<%= admin_redirects_path %>">
  <i class="fas fa-long-arrow-alt-left"></i>
  &nbsp;
  <%= _('Back') %>
</a>
<div class="dropdown is-togglable">
  <div class="dropdown-trigger">
    <a href="javascript:void(0)" aria-haspopup="true" aria-controls="dropdown-menu" class="button">
      <%= _('Actions') %>
      &nbsp;
      <i class="fas fa-angle-down"></i>
    </a>
  </div>
  <%= render partial: 'admin/redirects/dropdown_menu', locals: { redirect: @redirect } %>
  <%= render partial: 'admin/redirects/delete_modal', locals: { redirect: @redirect } %>
</div>
<article class="card mt-5">
  <header class="card-header">
    <h1 class="card-header-title">
      <i class="fas fa-location-arrow"></i>
      &nbsp;
      <%= _('Redirect Details') %>
    </h1>
  </header>
  <div class="card-content">
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Redirect|From') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @redirect.from %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Redirect|To') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @redirect.to %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Created At') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @redirect.created_at.to_fs %></div>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-label">
        <span class="label"><%= _('Updated At') %></span>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control"><%= @redirect.updated_at.to_fs %></div>
        </div>
      </div>
    </div>
  </div>
</article>