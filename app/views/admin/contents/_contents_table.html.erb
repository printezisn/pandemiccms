<% query_params = request.query_parameters.slice(:search, :hide_actions, :show_order) %>
<div class="columns is-multiline">
  <div class="column is-full-tablet is-half-desktop">
    <%= form_with(method: :get, html: { class: 'smart-table-search field has-addons', 'data-target' => 'contents-smart-table' }) do |t| %>
    <% query_params.except(:search).each do |key, value| %>
    <input type="hidden" name="<%= key %>" value="<%= value %>" />
    <% end %>
    <div class="control is-expanded">
      <input type="text" name="search" placeholder="<%= _('Search...') %>" class="input" value="<%= params[:search] %>" />
    </div>
    <div class="control">
      <button type="submit" class="button is-success" title="<%= _('Search') %>">
        <i class="fa-solid fa-search"></i>
      </button>
    </div>
    <% end %>
  </div>
  <div class="column has-text-right-tablet">
    <% if params[:hide_actions].blank? %>
    <a class="button is-success" href="<%= new_admin_content_path %>">
      <%= _('Create') %>
      &nbsp;
      <i class="fa-solid fa-plus"></i>
    </a>
    <% end %>
  </div>
</div>
<table class="table is-striped is-hoverable is-fullwidth mt-2">
  <thead>
    <tr>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'name', title: _('Name') } %></th>
      <% if params[:show_order].present? %>
      <th><%= render partial: 'admin/shared/table_header', locals: { field: 'order', title: _('Order') } %></th>
      <% end %>
      <th class="is-hidden-touch"><%= render partial: 'admin/shared/table_header', locals: { field: 'created_at', title: _('Created At') } %></th>
      <th class="is-hidden-touch"><%= render partial: 'admin/shared/table_header', locals: { field: 'updated_at', title: _('Updated At') } %></th>
      <th class="actions-cell<%= ' is-hidden' if params[:hide_actions].present? %>"></th>
    </tr>
  </thead>
  <tbody>
    <% if @contents.none? %>
    <tr>
      <td colspan="5"><%= _('No contents were found.') %></td>
    </tr>
    <% else %>
    <% @contents.each do |content| %>
    <tr>
      <td>
        <a href="<%= admin_content_path(content) %>"><%= content.name %></a>
      </td>
      <% if params[:show_order].present? %>
      <td><%= content.order %></td>
      <% end %>
      <td class="is-hidden-touch"><%= content.created_at.to_fs %></td>
      <td class="is-hidden-touch"><%= content.updated_at.to_fs %></td>
      <td class="actions-cell<%= ' is-hidden' if params[:hide_actions].present? %>">
        <div class="dropdown is-togglable is-right">
          <div class="dropdown-trigger">
            <a href="javascript:void(0)" aria-haspopup="true" aria-controls="dropdown-menu" title="<%= _('Actions') %>">
              <i class="fa-solid fa-ellipsis-v"></i>
            </a>
          </div>
          <%= render partial: 'admin/contents/dropdown_menu', locals: { content: } %>
        </div>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= paginate @contents %>

<% @contents.each do |content| %>
<%= render partial: 'admin/contents/delete_modal', locals: { content: content } %>
<% end %>