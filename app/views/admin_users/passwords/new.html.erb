<%
    content_for :title, _('Forgot Password | %{client}') % { client: current_client.name }
    content_for :description, _('Request instructions to reset password in %{client}') % { client: current_client.name }
%>

<article class="card">
  <header class="sr-only">
    <h1 class="is-size-4 has-text-centered mb-4"><%= _('Forgot Password ?') %></h1>
  </header>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'card-content') do |f| %>
  <%= f.hidden_field :client_id, value: current_client[:id] %>

  <div class="field">
    <%= f.label :email, class: 'label required-label' %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: _('Your email address'), class: 'input', required: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit _('Send me reset password instructions'), class: 'button is-success is-fullwidth' %>
    </div>
  </div>

  <%= render "admin_users/shared/links" %>

  <% end %>
</article>