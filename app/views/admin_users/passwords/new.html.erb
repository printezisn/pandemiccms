<%
    content_for :title, 'Forgot Password | Pandemic CMS'
    content_for :description, 'Request instructions to reset password in Pandemic CMS'
%>

<article class="small-form">
    <header>
        <h1 class="title is-3">Forgot Password ?</h1>
    </header>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.hidden_field :client_id, value: current_client_id %>

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <%= f.label :email, class: 'label required-label' %>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Your email address', class: 'input', required: true %>
                </div>
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-label is-normal"></div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <%= f.submit 'Send me reset password instructions', class: 'button is-link' %>
                    <br />
                    <br />
                    <%= render "admin_users/shared/links" %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</article>