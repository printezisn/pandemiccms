<%
  icon_sizes = [192, 256, 384, 512]
%>

<% client_view_cache "Webmanifest" do %>
{
  "theme_color": "#404654",
  "background_color": "#f9fafb",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "name": "<%= current_client.name %>",
  "short_name": "<%= current_client.name %>",
  "description": "",
  "icons": [
    <% icon_sizes.each_with_index do |size, index| %>
      {
        "src": "<%= current_client.image_path_with_default([size, size]) %>",
        "sizes": "<%= size %>x<%= size %>",
        "type": "image/png"
      }<%= ",\n" unless index == icon_sizes.size - 1 %>
    <% end %>
  ]
}
<% end %>